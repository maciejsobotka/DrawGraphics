<Window x:Class="MMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MMDB" Height="222" Width="387" Background="#FFA8A8A8" ResizeMode="NoResize">
    <Grid Margin="0,0,2,1">
        <Button x:Name="buttonImgSelect" Content="Select Img" HorizontalAlignment="Left" Margin="22,24,0,0" VerticalAlignment="Top" Width="75" Click="buttonImgSelect_Click"/>
        <TextBox x:Name="textBoxSource" HorizontalAlignment="Left" Height="23" Margin="119,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Foreground="#FFBFBFBF" FontStyle="Italic" Text="File Path..." Cursor="Arrow" IsEnabled="False"/>
        <Button x:Name="buttonShowImg" Content="Show Img" HorizontalAlignment="Left" Margin="22,72,0,0" VerticalAlignment="Top" Width="326" Click="buttonShowImg_Click" Height="50"/>
        <Button x:Name="changePixelButton" Content="Change Pixel" HorizontalAlignment="Left" Margin="22,142,0,0" VerticalAlignment="Top" Width="75" Click="changePixelButton_Click" IsEnabled="False"/>
        <Button x:Name="avgColorButton" Content="Avg Color" HorizontalAlignment="Left" Margin="119,142,0,0" VerticalAlignment="Top" Width="75" Click="avgColorButton_Click" IsEnabled="False"/>
        <Rectangle x:Name="colorRectangle" HorizontalAlignment="Left" Height="22" Margin="242,142,0,0" VerticalAlignment="Top" Width="106"/>

    </Grid>
</Window>
