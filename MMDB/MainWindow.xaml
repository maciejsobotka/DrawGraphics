<Window x:Class="MMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="buttonImgSelect" Content="Select Img" HorizontalAlignment="Left" Margin="22,24,0,0" VerticalAlignment="Top" Width="75" Click="buttonImgSelect_Click"/>
        <TextBox x:Name="textBoxSource" HorizontalAlignment="Left" Height="23" Margin="22,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="388" Foreground="#FFBFBFBF" FontStyle="Italic" Text="File Path" Cursor="Arrow" IsEnabled="False"/>
        <Button x:Name="buttonShowImg" Content="Show Img" HorizontalAlignment="Left" Margin="22,114,0,0" VerticalAlignment="Top" Width="75" Click="buttonShowImg_Click"/>

    </Grid>
</Window>
