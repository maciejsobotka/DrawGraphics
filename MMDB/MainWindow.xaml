<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MMDB.MainWindow"
        Title="MMDB" Height="709" Width="835" Background="#FFA8A8A8">
    <Grid>
        <Menu Width="Auto" Height="24" VerticalAlignment="Top" Foreground="White" Background="Black">
            <MenuItem x:Name="fileMenu" Header="File" Background="Black" Style="{DynamicResource MenuItemStyle}">
                <MenuItem x:Name="newFile" Header="New..." Foreground="White" Background="Black" Click="NewFile_Click" InputGestureText="Ctrl+N" MouseEnter="newFile_MouseEnter" MouseLeave="newFile_MouseLeave" BorderBrush="Black"/>
                <MenuItem x:Name="openFile" Header="Open..." Foreground="White" Background="Black" Click="OpenFile_Click" InputGestureText="Ctrl+O" MouseEnter="openFile_MouseEnter" MouseLeave="openFile_MouseLeave"/>

            </MenuItem>
        </Menu>
        <Button x:Name="changePixelButton" Content="Change Pixel" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="75" Click="changePixelButton_Click" IsEnabled="False"/>
        <Button x:Name="avgColorButton" Content="Avg Color" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="75" Click="avgColorButton_Click" IsEnabled="False"/>
        <Rectangle x:Name="colorRectangle" HorizontalAlignment="Left" Height="22" Margin="10,143,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBoxSource" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="229" Foreground="#FFBFBFBF" FontStyle="Italic" Text="File Path..." Cursor="Arrow" IsEnabled="False"/>
        <Grid Margin="0,25,0,23" Width="600">
            <Image x:Name="canvas" Height="50" Margin="0" Width="50"/>
        </Grid>
    </Grid>
</Window>
