<Window x:Class="MMDB.Windows.SqlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQLWindow" Height="420" Width="640" ResizeMode="CanMinimize" Topmost="True"
        Icon="../content/icon_small.ico" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Image x:Key="play" Source="../content/play.png" />
    </Window.Resources>
    <Grid Background="Black">
        <Button x:Name="StartScriptButton" Content="{StaticResource play}" HorizontalAlignment="Left" Margin="0,0,0,0"
                VerticalAlignment="Top" Width="75" Click="StartScriptButton_Click"
                Style="{DynamicResource ButtonStyle}" />
        <RichTextBox x:Name="SqlCommandsBox" HorizontalAlignment="Center" Height="174" Margin="0,22,0,0" VerticalAlignment="Top" Width="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Visible" />
        <RichTextBox x:Name="SqlResultsBox" HorizontalAlignment="Center" Height="196" Margin="0,198,0,0" VerticalAlignment="Top" Width="Auto"
                     IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>