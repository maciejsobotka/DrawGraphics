<Window x:Class="MMDB.Windows.TableFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TableFormWindow" Height="600" Width="592" ResizeMode="CanMinimize" Topmost="True" Icon="../content/icon_small.ico" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown">
    <Grid>
        <DataGrid x:Name="tableGrid" VerticalAlignment="Top" Height="500" Width="Auto" Margin="4,0,4,0" ItemsSource="{Binding}"/>
        <Button x:Name="buttonToXML" Content="To XML" HorizontalAlignment="Left" Margin="10,256,0,6" VerticalAlignment="Bottom" Width="75" Click="buttonToXML_Click"/>
        <Button x:Name="buttonFromXML" Content="From XML" HorizontalAlignment="Left" Margin="90,256,0,6" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.133,-4" Click="buttonFromXML_Click"/>
        <Button x:Name="buttonToDB" Content="To DB" HorizontalAlignment="Left" Margin="170,256,0,6" VerticalAlignment="Bottom" Width="75" Click="buttonToDB_Click"/>
        <Button x:Name="buttonFromDB" Content="From DB" HorizontalAlignment="Left" Margin="250,256,0,6" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.133,-4" Click="buttonFromDB_Click"/>
    </Grid>
</Window>
